<%= render 'layouts/errors', :object => @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>
  <% @tags.each do |tag| %>
    <%= label_tag tag.name %>
    <%= check_box_tag "tags[#{tag.name}]", tag.name %>
  <% end %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
